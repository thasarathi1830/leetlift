{
  "manifest_version": 3,
  "name": "LeetCode Hint Extension",
  "version": "1.0",
  "description": "Provides three-step hints for LeetCode problems.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "*://leetcode.com/problems/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://leetcode.com/problems/*"],
      "js": ["popup.js"]
    }
  ]
}